<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />

    <title>ClaimChain</title>
  </head>






  <body>
    <div class="container-fluid">
        <div class="card text-center border-primary mb-3">
            <div class="card-header">
                Register
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="firstname">First name</label>
                            <input type="text" class="form-control" id="firstname" placeholder="First Name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="middlename">Last name</label>
                            <input type="text" class="form-control" id="middlename" placeholder="Middle Name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="lastname">Last name</label>
                            <input type="text" class="form-control" id="lastname" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="bdate">BirthDay</label>
                            <input type="date" class="form-control" id="bdate" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="btime">Time of birth</label>
                            <input type="time" class="form-control" id="btime" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="a">Gender</label><br/>
                            <div class="form-check form-check-inline mt-2">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="male" value="male" checked="true">
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="female" value="female">
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="other" value="other">
                                <label class="form-check-label" for="other">Other</label>
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <button type="button" class="btn btn-primary" id="addspouse">Add Spouse</button>
                    <div id="spousecontent"></div>
                    <hr/>
                    <button type="button" class="btn btn-info" id="addchild">Add Child</button>
                    <div id="childcontent"></div>
                    <br/>
                    <button type="submit" class="btn btn-success">Submit Form</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#generatemodal">Generate Key</button>

                <!-- Modal -->
                <div class="modal fade" id="generatemodal" tabindex="-1" role="dialog" aria-labelledby="generatemodalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Key Generation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Get Generated Key here:
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>                          
            </div>
        </div>        
    </div>















    <!-- name3, birthdate gender spouse(yes/no) children(yes/no)
    generate key modal -->





    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>


<script>
$(document).ready(function(){

    $('#addspouse').click(function(e){
        $('#spousecontent').append('<br/><div class="card"><div class="card-header">Spouse Details</div><div class="card-body"><div class="row"><div class="col-md-4 mb-3"><label for="spfirstname">First name</label><input type="text" class="form-control" id="spfirstname" placeholder="First Name" required></div><div class="col-md-4 mb-3"><label for="spmiddlename">Middle Name</label><input type="text" class="form-control" id="spmiddlename" placeholder="Middle Name" required></div><div class="col-md-4 mb-3"><label for="splastname">Last name</label><input type="text" class="form-control" id="splastname" placeholder="Last Name" required></div></div><div class="row"><div class="col-md-4 mb-3"><label for="sppublickey">Spouse Public Key</label><input type="text" class="form-control" id="sppublickey" placeholder="Spouse Public Key" required></div><div class="col-md-4 mb-3"><button type="button" class="btn btn-danger mt-4" id="deletespouse">Delete Details</button></div></div></div></div>');
    });

    $('body').on('click','#deletespouse' ,function(e){
        event.preventDefault();
        $(this).parent().parent().parent().parent('div').remove();
    });

    $('#addchild').click(function(e){
        $('#childcontent').append('<br/><div class="card"><div class="card-header">Child Details</div><div class="card-body"><div class="row"><div class="col-md-4 mb-3"><label for="chfirstname">First name</label><input type="text" class="form-control" id="chfirstname" placeholder="First Name" required></div><div class="col-md-4 mb-3"><label for="chmiddlename">Middle Name</label><input type="text" class="form-control" id="chmiddlename" placeholder="Middle Name" required></div><div class="col-md-4 mb-3"><label for="chlastname">Last name</label><input type="text" class="form-control" id="chlastname" placeholder="Last Name" required></div></div><div class="row"><div class="col-md-4 mb-3"><label for="chpublickey">Child Public Key</label><input type="text" class="form-control" id="chpublickey" placeholder="Child Public Key" required></div><div class="col-md-4 mb-3"><button type="button" class="btn btn-danger mt-4" id="deletechild">Delete Details</button></div></div></div></div>');
    });

    $('body').on('click','#deletechild' ,function(e){
        event.preventDefault();
        $(this).parent().parent().parent().parent('div').remove();
    });

});

</script>